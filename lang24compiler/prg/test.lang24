
timestamp=(
	timezone:[8]char,
	hour:int,
	min:int,
	seconds:int,
	date:[256]char
)

calc_diff(in:^timestamp):int = {
	end.diff = 1;
	end.date^[0] = 'a';
	diff.diff = end.diff - in^.hour - in^.min - in^.seconds;
	diff.date = end.date;
	some_time = this_time(^end);
	return diff.diff;
}{
	end:timestamp 
	timestamp=(
		diff:int,
		date:^[256]char
	)
	diff:timestamp
	
	some_time:^time
	
	time=(hour:int, min:int, seconds:int)
	
	this_time(right_now:^timestamp):^time={
		returned = return_time();
		returned^.hour = returned^.hour + right_now^.diff;
		returned^.min = returned^.min + right_now^.diff;
		returned^.seconds = returned^.seconds + right_now^.diff;
		return returned;
	}{
		time=(hour:int, min:int, seconds:int)
		returned:^time
		return_time():^time = {
			curr.hour = 11;
			curr.min = 11;
			curr.seconds = 11;
			return ^curr;
		}{time=(hour:int, min:int, seconds:int) curr:time}
	}
}

get_curr_timestamp():^timestamp = {
	now.timezone[0]='g';
	now.timezone[1]='m';
	now.timezone[2]='t';
	now.timezone[3]='+';
	now.timezone[4]='1';
	now.hour=12;
	now.min=20;
	now.seconds=00;
	now.date[0]='1';
	now.date[1]='.';
	now.date[2]='2';
	now.date[3]='.';
	now.date[4]='2';
	now.date[5]='0';
	now.date[6]='2';
	now.date[7]='4';
	return ^now;
}{now:timestamp}

